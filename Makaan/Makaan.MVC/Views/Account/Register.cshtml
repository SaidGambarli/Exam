@model RegisterVM

@{
    ViewData["Title"] = "Register";
}


<body class="bg-gradient-primary">

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-3 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="Name">First Name</label>
                                        <input  class="form-control form-control-user" id="exampleFirstName" asp-for="Name">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="col-sm-6 ">
                                        <label asp-for="Surname">Last Name</label>
                                        <input class="form-control form-control-user" id="exampleFirstName"
                                               asp-for="Surname">
                                        <span class="text-danger" asp-validation-for="Surname"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 my-2">
                                        <label asp-for="Email">Email Adress</label>
                                        <input class="form-control form-control-user" id="exampleFirstName"
                                               asp-for="Email">
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <label asp-for="Username">Username</label>
                                        <input class="form-control form-control-user" id="exampleFirstName"
                                                       asp-for="Username">
                                        <span class="text-danger" asp-validation-for="Username"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 my-2">
                                        <label asp-for="Password">Email Password</label>
                                        <input type="password" class="form-control form-control-user" id="exampleFirstName"
                                               asp-for="Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="col-sm-6 my-2">
                                        <label asp-for="RePassword">Repeat Password</label>
                                        <input type="password" class="form-control form-control-user" id="exampleFirstName"
                                               asp-for="RePassword">
                                        <span class="text-danger" asp-validation-for="RePassword"></span>
                                    </div>
                                </div>
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <button class="btn btn-success">Register Account</button>
                            </form>
                                    
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Register with Google
                                </a>
                                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                    <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                                </a>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-controller="Account" asp-action="Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
        </div>
    </div>

</body>